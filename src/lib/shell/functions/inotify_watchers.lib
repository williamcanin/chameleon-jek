#!/bin/bash
function _INOTIFY_WATCHERS(){
  # Increasing the amount of inotify watchers in Linux
  msg_header "Increasing the amount of inotify watchers in Linux ..."
  echo fs.inotify.max_user_watches=524288 | sudo tee /etc/sysctl.d/40-max-user-watches.conf && sudo sysctl --system
  msg_finish "Increasing the amount of inotify watchers in Linux. Done!"
}

